        <!-- Page Content -->
        <div class="content">
            <div class="container">

                <div class="row">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-body">





                                <div class="info-widget">
                                    <h4 class="card-title">Patient Details</h4>

                                    <div class="row">
                                        <h5 style="margin-left: 20px;font-size: 0.9rem;font-weight: 700;margin-bottom: 10px;">Please provide following information about the Patient</h5>
                                        <form action="/user/edit-patient/?id=<%=id%>" method="POST" style="width: 100%;">
                                           
                                                               




                                                                                 

                                                                                    <div class="col-md-12 col-sm-12">
                                                                                        <div class="form-group card-label">
                                                                                            <label>Name</label>
                                                                                            <input class="form-control" type="text" placeholder="Enter name" value="<%=locals.user.booking[index].name%>" name="name" required>
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="col-md-12 col-sm-12">
                                                                                        <div class="form-group card-label">
                                                                                            <label>Phone</label>
                                                                                            <input class="form-control" type="text" placeholder="Enter phone number" value="<%=locals.user.booking[index].phone%>" name="phone">
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="col-md-12 col-sm-12">
                                                                                        <div class="form-group card-label">
                                                                                            <label>Address</label>
                                                                                            <input class="form-control" type="text" placeholder="Enter address" value="<%=locals.user.booking[index].address%>" name="address">
                                                                                        </div>
                                                                                    </div>
                                                                                   
                                                                                    <div class="col-md-12 col-sm-12">
                                                                                        <div class="form-group card-label">
                                                                                            <label>Age</label>
                                                                                            <input class="form-control" type="number" placeholder="Enter age" value="<%=locals.user.booking[index].age%>" name="age">
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="col-12 col-md-12">
                                                                                        <div class="form-group">
                                                                                            <label style="font-size: 0.9rem!important;margin-left: 5px;">Gender <span class="text-danger"></span></label>
                                                                                            <select name="gender" class="form-control select">
                                                                                               <%if(locals.user.booking[index].gender == 'Male'){%>
                                                                                                <option selected>Male</option>
                                                                                                <%}else{%>
                                                                                                    <option>Male</option>
                                                                                                    <%}%>
                                                                                                    <%if(locals.user.booking[index].gender == 'Female'){%>
                                                                                                <option selected>Female</option>
                                                                                                <%}else{%>
                                                                                                    <option>Female</option>
                                                                                                    <%}%>
                                                                                              
                                                                                                    <%if(locals.user.booking[index].gender == 'Others'){%>
                                                                                                        <option selected>Others</option>
                                                                                                        <%}else{%>
                                                                                                            <option>Others</option>
                                                                                                            <%}%>
                                                                                                </select>
                                                                                        </div>
                                                                                    </div>
                                                                                    <p style="font-size: 1rem;margin-left:20px;margin-top: 0px;font-weight: bold;">Patient Fee</p>
                                                                                    <span style="margin-left: 40px;margin-right: 15px;">
                                                                                        <%if(locals.user.booking[index].fee == doctor.fee){%>
                                                                                            <input type="radio" name="price" value="1" class="cb1" checked onchange="check1(this);"></span><span>Fully Paid</span></br>
                                                                                            <%}else{%>
                                                                                            <input type="radio" name="price" value="1" class="cb1" onchange="check1(this);"></span><span>Fully Paid</span></br>
                                                                                            <%}%>
                                                                                    <span style="margin-left: 40px;margin-right: 15px;">
                                                                                        <%if(locals.user.booking[index].fee == 'Free'){%>
                                                                                            <input type="radio" name="price" value="2" class="cb1" checked onchange="check1(this);"></span><span>Free</span></br>
                                                                                            <%}else{%>
                                                                                        <input type="radio" name="price" value="2" class="cb1" onchange="check1(this);"></span><span>Free</span></br>
                                                                                        <%}%>
                                                                                    <span style="margin-left: 40px;margin-right: 15px;">
                                                                                        <%if(locals.user.booking[index].fee != doctor.fee){%>
                                                                                            <input type="radio" name="price" value="3" checked class="cb1" data-type="others" onchange="check1(this);"></span><span>Partial</span></br>
                                                                                            <%}else{%>
                                                                                        <input type="radio" name="price" value="3" class="cb1" data-type="others" onchange="check1(this);"></span><span>Partial</span></br>
                                                                                        <%}%>
                                                                                    <span style="margin-left: 25px;margin-right: 30px;"></span>
                                                                                    <%if(locals.user.booking[index].fee == doctor.fee){%>
                                                                                        <textarea cols="18" name="price_description" style="height:40px;margin-top:15px;padding:5px;outline:0;" id="texta" name="description" placeholder="Enter the amount"  class="displayNone"><%=locals.user.booking[index].fee%></textarea>
                                                                                        <%}else{%>
                                                                                            <textarea cols="18" name="price_description" style="height:40px;margin-top:15px;padding:5px;outline:0;" id="texta" name="description" placeholder="Enter the amount" class="displayNone"></textarea>
                                                                                            <%}%>
                                                                                    <div class="submit-section mt-4">
                                                                                        <button type="submit" class="btn btn-primary submit-btn" style="margin-left: 10px !important;">Submit</button>
                                                                                    </div>
                                        </form>
                                    </div>


                                </div>






                                <!-- /Personal Information -->


                                <!-- /Checkout Form -->

                            </div>
                        </div>

                    </div>

                    <div class="col-md-5 col-lg-4 theiaStickySidebar">

                        <!-- Booking Summary -->
                        <div class="card booking-card">
                            <div class="card-header">
                                <h4 class="card-title">Booking Appointment</h4>
                            </div>
                            <div class="card-body">

                                <!-- Booking Doctor Info -->
                                <div class="booking-doc-info">
                                    <a href="/doctor-profile" class="booking-doc-img">
                                        <img src="<%=doctor.avatar%>" alt="User Image">
                                    </a>
                                    <div class="booking-info">
                                        <h4>
                                            <a href="/doctor-profile">
                                                <%=doctor.name%>
                                            </a>
                                        </h4>
                                        <div class="rating">
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star"></i>
                                            <span class="d-inline-block average-rating">35</span>
                                        </div>
                                        <div class="clinic-details">
                                            <p class="doc-location"><i class="fas fa-map-marker-alt"></i>
                                                <%=doctor.contacts.city%>,
                                                    <%=doctor.contacts.state%>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- Booking Doctor Info -->

                                <div class="booking-summary">
                                    <%var today = new Date();%>
                                        <%var dd = String(today.getDate()).padStart(2, '0');
                                        var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
                                        var yyyy = today.getFullYear();
                                        var weekday = new Array('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday');
                                        var dayOfWeek = weekday[today.getDay()];%>
                                            <div class="booking-item-wrap">
                                              
                                                <ul class="booking-fee">
                                                    <li>Booking Fee <span>Rs <%=doctor.booking_fee%></span></li>
                                                    <!-- <li>G.S.T <span>Rs 10</span></li> -->
                                                </ul>
                                                <div class="booking-total">
                                                    <ul class="booking-total-list">
                                                        <li>
                                                            <span>Total</span>
                                                            <span class="total-cost">Rs <%=doctor.booking_fee%></span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Booking Summary -->

                    </div>
                </div>

            </div>

        </div>
