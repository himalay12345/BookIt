<!DOCTYPE html>
<html lang="en">

<!-- doccure/doctor-change-password  30 Nov 2019 04:12:36 GMT -->

<head>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
			<script src="js/html5shiv.min.js"></script>
			<script src="js/respond.min.js"></script>
		<![endif]-->

</head>

<body>

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <!-- Header -->
     
        <!-- /Header -->

        <!-- Breadcrumb -->
    
        <!-- /Breadcrumb -->

        <!-- Page Content -->
        <div class="col-md-12 col-lg-12 col-xl-12 settings-bread pzero" style="margin-left:-15px;border-left: 0.5px solid lighgrey;margin-top: 20px;">
        <div class="card" style="border-radius: 0;border:0;">
        <div class="card-body" style="padding:0rem;">
        <div class="row position-relative">
            <div class="col-md-12" style="height: 40px;background-color: rgb(248, 248, 248);">
                <p style="margin-top: 10px;margin-left: 150px;font-weight: bold;">Step 1/4</p>
            </div>
            <div class="col-md-12" style="margin-left: -5px;">
            <div class="col-md-1" style="border-top: 5px solid blueviolet; width: 110%;"> 
            </div>
        </div>
        <div class="col-md-6 col-lg-5 m-55 pzero" style="margin-left: 150px;margin-top: 30px;">
            <form action="/user/update-profile" enctype="multipart/form-data" method="POST">
                <input type="hidden" name="id" value="<%=locals.user.id%>">
               
                <h2 style="font-size: 1.5rem;margin-top: 20px;font-weight: 700;">Basic Details</h2>
                <div class="col-md-10 col-sm-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="change-avatar">
                                <div class="profile-img">
                                    <img src="<%=locals.user.avatar%>" id="image" onerror='this.src="/img/profile.png"' alt="User Image">
                                </div>
                                <div class="upload-img">
                                    <div class="change-photo-btn upload-sm-btn">
                                        <span><i class="fa fa-upload"></i> Upload Photo</span>
                                        <input type="file" class="upload" name="avatar" id="imageUpload">
                                    </div>
                                    <small class="form-text text-muted">Allowed JPG, GIF or PNG. Max size of 2MB</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-left: -15px;">
                        <label style="font-size: 0.85rem;"> Name <span class="text-danger"></span></label>
                        <div class="col-md-4" style="margin-left: -15px;">
                            <p style="border:1px solid lightgrey;width:100px;padding: 10px;">Dr./Mr./Ms.</p>
                        </div>
                        <div class="col-md-8" style="margin-top: -62px;margin-left: 75px;">
                            <input type="text" style="border-top-left-radius: 0px;border-bottom-left-radius: 0px;" placeholder="Enter Your Name" name="name" class="form-control minput" value="<%=locals.user.name%>" required>

                        </div>
                    </div>
                    <div class="col-12 col-md-11" style="margin-left: -30px;">
                        <div class="form-group">
                            <label style="font-size: 0.85rem;">Specialisation<span class="text-danger"></span></label>
                            <select name="department" class="form-control mdept select" required>
                            <%if(locals.user.department == 'General Physician'){%><option selected>General Physician</option><%}else{%>
                            <option>General Physician</option><%}%>
                            <%if(locals.user.department == 'Ophthalmology'){%><option selected>Ophthalmology</option><%}else{%>
                            <option>Ophthalmology</option><%}%>
                            <%if(locals.user.department == 'Dermatology'){%><option selected>Dermatology</option><%}else{%>
                                <option>Dermatology</option><%}%>
                            <%if(locals.user.department == 'Paediatrics'){%><option selected>Paediatrics</option><%}else{%>
                                <option>Paediatrics</option><%}%>
                            <%if(locals.user.department == 'Urology'){%><option selected>Urology</option><%}else{%>
                                <option>Urology</option><%}%>	
                            <%if(locals.user.department == 'Neurology'){%><option selected>Neurology</option><%}else{%>
                                <option>Neurology</option><%}%>	
                            <%if(locals.user.department == 'Orthopedic'){%><option selected>Orthopedic</option><%}else{%>
                                <option>Orthopedic</option><%}%>
                            <%if(locals.user.department == 'Cardiologist'){%><option selected>Cardiologist</option><%}else{%>
                                <option>Cardiologist</option><%}%>	
                            <%if(locals.user.department == 'Dentist'){%><option selected>Dentist</option><%}else{%>
                                <option>Dentist</option><%}%>	
                            <%if(locals.user.department == 'Others'){%><option selected>Others</option><%}else{%>
                            <option>Others</option><%}%>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 gmargin" style="margin-left: -30px;display: inline-flex;">
                        <div class="form-group col-sm-12">
                            <label style="font-size: 0.85rem;">Gender <span class="text-danger"></span></label>
                            <select name="gender" class="form-control select gwidth" required>
                                <%if(locals.user.gender == 'Male'){%><option selected>Male</option><%}else{%>
                                <option>Male</option><%}%>
                                <%if(locals.user.gender == 'Female'){%><option selected>Female</option><%}else{%>
                                <option>Female</option><%}%>
                                <%if(locals.user.gender == 'Others'){%><option selected>Others</option><%}else{%>
                                <option>Others</option><%}%>
                                </select>
                        </div>
                    </div>
                    <div class="col-md-6 cmleft" style="display: inline-flex;margin-left: -50px;">
                        <div class="form-group col-sm-12">
                            <label class="control-label">City</label>
                            <input type="text" class="form-control gwidth" name="city" placeholder="Enter your City" value="<%=locals.user.contacts.city%>" required>
                        </div>
                    </div>
                    <div class="col-md-11" style="margin-left: -30px;">
                        <div class="form-group">
                            <label class="control-label">State / Province</label>
                            <input type="text" class="form-control" name="state" placeholder="Enter your State" value="<%=locals.user.contacts.state%>" required >
                        </div>
                    </div>
                    <div class="col-md-11" style="margin-left: -30px;">
                        <div class="form-group">
                            <label class="control-label">Postal Code</label>
                            <input type="text" class="form-control" name="pincode" placeholder="Enter your Pin code" value="<%=locals.user.contacts.pincode%>" required>
                        </div>
                    </div>
                    <div class="submit-section submit-btn-bottom" style="margin-top: 25px;display: inline-flex;height: 40px;margin-left: -40px;">
                        <a href="/steps" id="submit_button" class="btn btn-primary submit-btn" style="color:white;border-radius: 5px;width: 100px;margin-left: 20px;margin-top: -5px;">Back</a>
                    </div>
                    <div class="submit-section submit-btn-bottom" style="margin-top: 25px;display: inline-flex;margin-left: 110px;height: 40px;">
                        <button type="submit" id="submit_button" class="btn btn-primary submit-btn" style="border-radius: 5px;width: 100px;margin-left: 0px;margin-top: -5px;">Next</button>
                    </div>
                </div>
                
              
                </form>
        </div>
        <div class="col-md-4">
            <div class="note">
                <i class="fas fa-lightbulb" style="color:#6DBCAE;font-size: 0.8rem;"></i>
                <p style="font-size: 0.8rem; color: #439485;font-weight: 700;">Basic details about your profile helps the patients easy to find and reach upto you.</p>
            </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        
        <!-- /Page Content -->

        <!-- Footer -->
        <%-include('footer');%>
        <!-- /Footer -->

    </div>
    <!-- /Main Wrapper -->

    <!-- jQuery -->
 
    <script>
        document.getElementById("imageUpload").onchange = function () {
        var reader = new FileReader();

        reader.onload = function (e) {
            // get loaded data and render thumbnail.
            document.getElementById("image").src = e.target.result;
        };

        // read the image file as a data URL.
        reader.readAsDataURL(this.files[0]);
};
    </script>
    <script>
        <%if(flash.success && flash.success.length>0){%>
        new Noty({
            theme: 'metroui',
            text: '<%=flash.success%>',
            type: 'success',
            layout: 'topRight',
            timeout: 1500
        }).show();
        <%}%>
        <%if(flash.error && flash.error.length>0){%>
        new Noty({
            theme: 'metroui',
            text: '<%=flash.error%>',
            type: 'error',
            layout: 'topRight',
            timeout: 3000
        }).show();
        <%}%>
    </script>

</body>

