<!DOCTYPE html>
<html lang="en">
<head>
	<title>Booking Pdf</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="/img/favicon.png"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/perfect-scrollbar/perfect-scrollbar.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
</head>
<body>
	
	
	<div class="limiter">
	
		<div class="container-table100">
			<div class="wrap-table100">
				<div class="table100">
					<h2 class="text-center" style="color:white;margin-bottom:15px;"><%=date%></h2>
				<%var cnt =0;%>
					<table>
						<thead>
							<tr class="table100-head">
                                <th class="columna1">Patient Name</th>
                                <th class="columna2">Patient Address</th>
                                <th class="columna3">Amount</th>
                                <th class="columna4">Remarks</th>
                                  

							</tr>
						</thead>
                        <tbody>
                            <%var j= 0;%>
                             <%for(let u of locals.user.billings1){%>
                                <%if(u.date!=date){%>
                                    <%continue;%>
                                <%}%>
                             <tr style="padding: 0px !important;">
                                 <td class="columna1">
                                 <input type="text" name="name" value="<%=u.name%>" placeholder="Patient Name" style="margin-bottom:5px;font-weight: bold;background-color: transparent;width: 200px;" class="form-control" readonly>
                             </td>
                             <td class="columna2">
                                 <input type="text" name="address" value="<%=u.address%>" placeholder="Patient Phone" style="margin-bottom:5px;font-weight: bold;background-color: transparent;width: 200px;"class="form-control" readonly>
                             </td>
                            <td class="columna3">
                             <input type="text" name="amount" value="<%=u.amount%>" placeholder="Amount" style="margin-bottom:5px;font-weight: bold;background-color: transparent;width: 150px;"class="form-control" readonly>        
                             </td>
                             <td class="columna4">
                                <input type="text" name="remarks" value="<%=u.remarks%>" placeholder="Amount" style="margin-bottom:5px;font-weight: bold;background-color: transparent;width: 300px;"class="form-control" readonly>
                                
                     </td>
                                
                        
                             </tr>
                      
                         <%j++%>
                             <%}%>
                            
                            <%var res = 0%>
                             <tr class="newst">
                                 <td class="columnb1">
                                 <input type="text" name="name" value="Sub Total : " style="margin-bottom:5px;font-weight:bold" class="form-control cform">
                             </td>
                             <td class="columna2">
                                 </td>
                                
                                 
                                 <td class="columna3">
                                     <input type="text" name="dues" value="Rs <%=total%>" placeholder="Amount" style="margin-bottom:5px;font-weight: bold;" class="form-control">
                                 </td>
                                 <td class="columna4">
                                </td>
                             </tr>
                             <tr class="newst">
                                <td class="columnb1">
                                <input type="text" name="name" value="Total Expenses : " style="margin-bottom:5px;font-weight:bold" class="form-control cform">
                            </td>
                            <td class="columna2">
                                </td>

                                    <td class="columna3">
                                        <input type="text" name="dues" value="Rs <%=exp%>" placeholder="Amount" style="margin-bottom:5px;font-weight: bold;" class="form-control">
                                    </td>
                                <%res = total - exp%>
                                <td class="columna4">
                                </td>
                            </tr>
                             <tr class="newst">
                                <td class="columnb1">
                                <input type="text" name="name" value="Grand Total : " style="margin-bottom:5px;font-weight:bold" class="form-control cform">
                            </td>
                            <td class="columna2">
                                </td>

                           
                                    <td class="columna3">
                                        <input type="text" name="dues" value="Rs <%=res%>" placeholder="Amount" style="margin-bottom:5px;font-weight: bold;" class="form-control">
 
                                    </td>
                           
                                <td class="columna4">
                                </td>
                            </tr>
                                
                         </tbody>
					</table>
				</div>
			</div>
		</div>
	</div>


	

<!--===============================================================================================-->	
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="/js/main.js"></script>

</body>
</html>