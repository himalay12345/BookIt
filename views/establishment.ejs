		<![endif]-->

</head>

<body>

    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <%-include('header');%>
        <!-- Header -->
     
        <!-- /Header -->

        <!-- Breadcrumb -->
    
        <!-- /Breadcrumb -->

        <!-- Page Content -->
        <div class="col-md-12 col-lg-12 col-xl-12 setting-bread pzero" style="margin-left:-15px;border-left: 0.5px solid lighgrey;margin-top: 20px;">
        <div class="card" style="border-radius: 0;border:0;">
        <div class="card-body" style="padding:0rem;">
        <div class="row position-relative mzero">
            <div class="col-md-12" style="height: 40px;background-color: rgb(248, 248, 248);">
                <p style="margin-top: 10px;margin-left: 150px;font-weight: bold;">Step 4/4</p>
            </div>
            <div class="col-md-12" style="margin-left: -15px;">
            <div class="col-md-12" style="border-top: 5px solid blueviolet;width: 110%;"> 
            </div>
        </div>
        <div class="col-md-6 col-lg-5 m-55 pzero" style="margin-left: 150px;margin-top: 30px;">
            <form action="/user/update-establishment" method="POST">
                <input type="hidden" name="id" value="<%=locals.user.id%>">
                <h2 style="font-size: 1.5rem;margin-top: 20px;font-weight: 700;">Establishment Basic Details (ex: Clinic, Hospitals,etc.)</h2>
                
                <div class="col-md-10" style="margin-top: 40px;margin-left: -30px;">
                    <div class="col-12 col-md-12">
                        <div class="form-group">
                            <label style="font-size: 0.85rem;">Establishment Name</label>
                            <input type="text" placeholder="Enter Your establishment name"  name="clinicname" value="<%=locals.user.clinicname%>" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-12">
                        <div class="form-group">
                            <label style="font-size: 0.85rem;">City</label>
                            <input type="text" placeholder="Enter city" name="cliniccity"  value="<%=locals.user.cliniccity%>"" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-12">
                        <div class="form-group">
                            <label style="font-size: 0.85rem;">Address</label>
                            <input type="text" placeholder="Enter addresss of your establishment" name="clinicaddr" value="<%=locals.user.clinicaddr%>" class="form-control" required>
                        </div>
                    </div>
                  
                    <div class="submit-section submit-btn-bottom" style="margin-top: 25px;display: inline-flex;height: 40px;">
                        <a href="/educational" id="submit_button" class="btn btn-primary submit-btn position-absolute" style="color:white;border-radius: 5px;width: 100px;left:8%;margin-top: -5px;">Back</a>
                    </div>
                    <div class="submit-section submit-btn-bottom" style="margin-top: 25px;display: inline-flex;margin-left: 130px;height: 40px;">
                        <button type="submit" id="submit_button" class="btn btn-primary submit-btn position-absolute" style="border-radius: 5px;width: 100px;margin-top: -5px;right:8%;">Next</button>
                    </div>
                </div>
                </form>
        </div>
        <div class="col-md-4">
            <div class="note">
                <i class="fas fa-lightbulb" style="color:#6DBCAE;font-size: 0.8rem;"></i>
                <p style="font-size: 0.8rem; color: #439485;font-weight: 700;">Basic details about your practice helps patients reach you easily for appointment booking and enquiries.</p>
            </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        
        <!-- /Page Content -->

        <!-- Footer -->
        <%-include('footer');%>
        <!-- /Footer -->

    </div>
    <!-- /Main Wrapper -->

    <!-- jQuery -->
    <script src="<%=assetPath('js/jquery.min.js')%>"></script>
    <script src="<%=assetPath('js/popper.min.js')%>"></script>

    <script src="<%=assetPath('js/bootstrap.min.js')%>"></script>
   

    <script src="<%=assetPath('plugins/theia-sticky-sidebar/ResizeSensor.js')%>"></script>
    <script src="<%=assetPath('plugins/theia-sticky-sidebar/theia-sticky-sidebar.js')%>"></script>
    <script src="<%=assetPath('js/script.js')%>"></script>
    <script>
        <%if(flash.success && flash.success.length>0){%>
        new Noty({
            theme: 'metroui',
            text: '<%=flash.success%>',
            type: 'success',
            layout: 'topRight',
            timeout: 1500
        }).show();
        <%}%>
        <%if(flash.error && flash.error.length>0){%>
        new Noty({
            theme: 'metroui',
            text: '<%=flash.error%>',
            type: 'error',
            layout: 'topRight',
            timeout: 3000
        }).show();
        <%}%>
    </script>

</body>

